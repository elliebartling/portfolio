
html
  font-family 'Roboto'
  color lighten(black, 30)

h1, h2, h3, h4
  // font-family 'Noto Serif'
  font-weight 700
  color black
  line-height 1.4
  margin-bottom 1rem

.fancy
  font-family 'Bitter'

.title
  font-size 36px
  font-weight 700
  margin-bottom 10px
  letter-spacing -1px
  position relative
  &:before
    content: ""
    width line-width
    height 100%
    position absolute
    left -20px
    +above('s')
      left -40px
    background black

.subtitle
  text-transform uppercase
  letter-spacing 1.5px
  color lighten(black, 70)
  font-size 1rem

body
  padding-top 40px
  color lighten(black, 20)
  line-height 1.7
  font-weight 400

strong
  color black
  font-weight 600

a
  color black
  font-weight 600
  display inline-block
  position relative
  &:after
    display block
    content ""
    height 2px
    width 100%
    position absolute
    left 0
    bottom -1px
    background lighten(black, 85)
    // background-image linear-gradient(-135deg, #1916BD 0%, #CE88EC 100%)
    cursor pointer

a:hover, a:focus
  text-decoration none
  color black
  &:after
    width 100%
    background black
    transition all 0.25s ease

a.active, a.router-link-active
  &:after
    width 100%
    background black
    transition width 0.25s ease



pre code.hljs
  padding 20px
  font-size 12px
  border-radius 4px
  border-color transparent
