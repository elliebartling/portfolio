app-width = 970px

body
  padding-top 60px

#main
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content center
  align-items flex-start
  max-width 100%
  width 100%
  section
    width 100%

.navbar
  margin auto
  height 40px
  padding 30px 20px
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  position fixed
  top 0
  left 0
  z-index 400
  background white
  width 100%
  a
    margin-right 15px
    text-transform lowercase
    &:after
      width 0%
  a:hover, a:focus, a.router-link-active
    color black
    &:after
      width 100%
      background black
      transition all 0.25s ease

div.navbar
  box-shadow 0px 2px 15px rgba(black, .1)

footer.navbar
  position relative
  padding 30px 20px
  // margin-bottom 10px
  flex-direction column
  justify-content flex-start
  align-items flex-start
  top auto
  bottom 0px
  +above('m')
    flex-direction row
    justify-content space-between
    align-items center
  flex-wrap nowrap
  div
    margin-bottom 10px
    +above('m')
      margin-bottom 0px
  p
    margin-bottom 0px


.section
  padding-top 40px
  padding-bottom 10px
  .container
    display flex
    flex-wrap nowrap
    flex-direction row

.section:first-of-type
  padding-top 10px
.section-gray
  background lighten(black, 95)

.fade-enter-active, .fade-leave-active
  transition-property: opacity
  transition-duration: .25s


.fade-enter-active
  transition-delay: .25s


.fade-enter, .fade-leave-active
  opacity: 0





#work-ive-done .section--body
  width: 100%

#skills
  margin 0px
  padding 0px
#skills .section--body
  width 100%
#skills .skills-container
  display flex
  flex-wrap nowrap
  flex-direction row
  width 100%

#skills .skill
  padding 10px
  padding-bottom 3px
  // margin-right 20px
  text-align left
  display flex
  justify-content flex-start
  align-items center
  flex-direction column

#skills .skill > .skill-link
  color rgba(black, .5)
#skills .skill > .skill-link.active, #skills .skill > .skill-link:hover
  color black
