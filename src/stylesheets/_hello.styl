  position relative
  padding-top 0px

#hi-im-ellen .featured-image img
  width 50%
  display none

.body
  width 100%
  margin auto
  padding 60px
  position relative

#hi-im-ellen .text
  background white
  width 33%
  padding 40px
  right 60px
  z-index 4
  position absolute
  top 50%
  transform translateY(-50%)


#hi-im-ellen .personal-image
  max-width 70%
  img
    width 100%

.title
  // font-family 'Merriweather'
  font-size 36px
  font-weight 700
  margin-bottom 10px
  letter-spacing -1px
  position relative
  &:before
    content: ""
    width 4px
    height 100%
    position absolute
    left -40px
    background black
